{
  "name": "Muses",
  "description": "Helps you remember facts and notes",
  "version": "0.7",
  "manifest_version": 2,
  "permissions": ["contextMenus", "storage"],

  // newly added 
  "app" : {
    "launch" : {
      "local_path" : "index.html"
    }
  },

  "chrome_url_overrides" : {
    "newtab" : "index.html"
  },

 "offline_enabled" : true,
  "background": {
    "persistent": true,
    "scripts": ["js/background.js"]
  }
}
